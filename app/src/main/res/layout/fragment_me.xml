<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/layout_bg"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_height="wrap_content"
                android:id="@+id/header"
                android:background="@color/md_white_1000"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"

                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/imv"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="21dp"
                    android:layout_marginRight="21dp"
                    android:src="@drawable/arrow_right" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/divider"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/divider"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"
                />

            <RelativeLayout
                android:background="@color/md_white_1000"
                android:layout_width="match_parent"
                android:id="@+id/dongtai"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/dongtai"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"

                    android:textSize="16dp"
                    android:text="我的动态"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="21dp"
                     />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:paddingLeft="20dp"
                    android:background="@color/divider"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/md_white_1000"
                android:layout_width="match_parent"
                android:id="@+id/anli"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/anli"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"

                    android:textSize="16dp"
                    android:text="我的案例"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="21dp"
                    />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:paddingLeft="20dp"
                    android:background="@color/divider"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/jibie"
                android:background="@color/md_white_1000"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/jibie"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"

                    android:textSize="16dp"
                    android:text="级别认证"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="21dp"
                    />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:paddingLeft="20dp"
                    android:background="@color/divider"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/shipin"
                android:background="@color/md_white_1000"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/shipin"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"

                    android:textSize="16dp"
                    android:text="我的视频"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="21dp"
                    />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:paddingLeft="20dp"
                    android:background="@color/divider"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/huifu"
                android:background="@color/md_white_1000"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/huifu"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"

                    android:textSize="16dp"
                    android:text="回复我的"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="21dp"
                    />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:paddingLeft="20dp"
                    android:background="@color/divider"/>
            </RelativeLayout>

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/divider"/>
            <RelativeLayout

                android:layout_width="match_parent"
                android:id="@+id/guanzhu"
                android:background="@color/md_white_1000"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/guanzhu"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"

                    android:textSize="16dp"
                    android:text="我的关注"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="21dp"
                    />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:paddingLeft="20dp"
                    android:background="@color/divider"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/fensi"
                android:background="@color/md_white_1000"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/fensi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"

                    android:textSize="16dp"
                    android:text="我的粉丝"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="21dp"
                    />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:paddingLeft="20dp"
                    android:background="@color/divider"/>
            </RelativeLayout>

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/shezhi"
                android:background="@color/md_white_1000"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/shezhi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"

                    android:textSize="16dp"
                    android:text="设置"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="21dp"
                    />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:paddingLeft="20dp"
                    android:background="@color/divider"/>
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>